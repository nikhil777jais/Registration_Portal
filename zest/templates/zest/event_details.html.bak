{% extends 'zest/base.html' %}
{% block content %}
<div class="container">
  <div class="row rounded mt-4 bg-warning">
    <div class="col-md-12 p-2 text-center">
      <h4>{{individual_event_obj.event_name}} DETAILS</h4>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-12">
      <table class="table table-bordered table-hover bg-white">
        <thead>
          <tr class="text-center">
            <th scope="col" style="width:10%">PID</th>
            <th scope="col" style="width:25%">Participant Name</th>
            <th scope="col" style="width:25%">College Name</th>
            <th scope="col" style="width:15%">Batch</th>
            <th scope="col" style="width:15%">Course</th>
            <th scope="col" style="width:10%">Branch</th>
          </tr>
        </thead>
        <tbody>
          {% for pid in pids %}
          <tr>
            <td class="align-middle text-center p-2"><b>{{pid.id}}</b></td>
            <td class="text-center align-middle p-2">{{pid.name}}</td>
            <td class="align-middle text-center p-2">{{pid.college_name}}</td>
            <td class="align-middle text-center p-2">{{pid.batch}}</td>
            <td class="align-middle text-center p-2">{{pid.course}}</td>
            <td class="align-middle text-center p-2">{{pid.branch}}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
  <div class="row d-print-none">
    <div class="col-md-12 mt-2  text-center">
      <form>
        <input class="btn btn-color serach-btn " type="button" value="Print this page" onClick="window.print()">
        <a href="{% url 'event_summary' %}" class="btn btn-color serach-btn ">View Summary</a>
      </form>
    </div>
  </div>
</div>
{% endblock content %}