{% extends 'zest/base.html' %}
{% block content %}
<div class="container">
  <div class="row rounded mt-4 bg-warning">
    <div class="col-md-12 p-2 text-center">
      <h4>{{team_event_obj.event_name}} DETAILS</h4>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-12">
      <table class="table table-bordered table-hover bg-white">
        <thead>
          <tr class="text-center">
            <th scope="col" style="width:10%">TID</th>
            <th scope="col" style="width:25%">College Name</th>
            <th scope="col" style="width:65%">TID details</th>
          </tr>
        </thead>
        <tbody>
          {% for tid in tids %}
          <tr>
            <td class="align-middle text-center p-2">{{tid.id}}</td>
            <td class="align-middle text-center p-2">{{tid.college_name}}</td>
			<td class="align-middle text-left p-2">
			{% for pid in tid.pid.all %}
				<b>{{pid.id}}</b> ( {{pid.name}},&emsp;{{pid.college_name}},&emsp;{{pid.batch}},&emsp;{{pid.course}},&emsp;{{pid.branch}})<br>
			{% endfor %}
			</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
  <div class="row d-print-none">
    <div class="col-md-12 mt-2  text-center">
      <form>
        <input class="btn btn-color serach-btn " type="button" value="Print this page" onClick="window.print()">
        <a href="{% url 'event_summary' %}" class="btn btn-color serach-btn ">View Summary</a>
      </form>
    </div>
  </div>
</div>
{% endblock content %}